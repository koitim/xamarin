<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page6">
    <ContentPage.Content>
        <StackLayout>
            <Label VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Text="Hello, Bindings" TextColor="Blue" Rotation="{Binding Source={x:Reference slider}, Path=Value}"/>
            <Slider VerticalOptions="End" x:Name="slider" Minimum="0" Maximum="360"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>